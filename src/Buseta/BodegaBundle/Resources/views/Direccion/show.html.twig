{% extends "BusetaBodegaBundle::layout.html.twig" %}

{% block nombre_menu_superior %}

{% endblock %}

{% block titulo_encabezado %}
    Datos de la dirección
{% endblock %}

{% block area_trabajo %}

    <table class="table table-striped" style="font-size: 16px;">
        <tbody>

        <tr>
            <th>Calle</th>
            <td>{{ entity.calle }}</td>
        </tr>

        <tr>
            <th>Número</th>
            <td>
                {% if entity.numero == '' %}
                    <label style="color: red">La dirección no tiene número</label>
                {% else %}
                    {{ entity.numero }}
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Entre Calles</th>
            <td>
                {% if entity.entrecalles == '' %}
                    <label style="color: red">La dirección no tiene entre calles</label>
                {% else %}
                    {{ entity.entrecalles }}
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>País</th>
            <td>
                {% if entity.pais == '' %}
                    <label style="color: red">La dirección no tiene país</label>
                {% else %}
                    {{ entity.pais }}
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Subdivisión (Estado)</th>
            <td>
                {% if entity.subdivision == '' %}
                    <label style="color: red">La dirección no tiene subdivisión</label>
                {% else %}
                    {{ entity.subdivision }}
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Ciudad</th>
            <td>
                {% if entity.ciudad == '' %}
                    <label style="color: red">La dirección no tiene ciudad</label>
                {% else %}
                    {{ entity.ciudad }}
                {% endif %}
            </td>
        </tr>

        </tbody>
    </table>

    <div class="form-actions">
        {{ form_start(delete_form) }}
        <a class="btn btn-primary" href="{{ path('direccion_edit', { 'id': entity.id }) }}"> Editar</a>
        <a class="btn btn-primary" href="{{ path('direccion') }}"> Listado</a>
        <button type="sumbit" class="btn btn-primary">Eliminar</button>
        {{ form_end(delete_form) }}
    </div>


{% endblock %}


